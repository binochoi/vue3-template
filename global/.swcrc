{
    "$schema": "https://json.schemastore.org/swcrc",
    "sourceMaps": false,
    "module": {
        "type": "es6"
    },
    "jsc": {
        "parser": {
            "syntax": "typescript",
            "decorators": true,
            "dynamicImport": true
        },
        "transform": {
            "legacyDecorator": true,
            "decoratorMetadata": true
        },
        "paths": {
            "@global/*": ["./*"]
        },
        "baseUrl": ".",
        "target": "es2016"
    },
    "minify": true,
    "exclude": ["node_modules", "dist"]
}